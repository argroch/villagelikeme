<div class="page-center">
	<div class="main-box">
		<div class="center-it">
			<p><h2>Hey, Thanks!</h2></p>
			<% if @no_scene == true %>
				<p>
					Leave us your email address and we'll let you know where your perfect neighborhood is...as soon as we do!  
				</p>
			<% else %>
				<p>
					..and it begins. Leave us your email address and we'll be sure to tip you off when things REALLY start to get awesome!
				</p>
			<% end %>

			<div>
				<%= form_tag('/thanks') do %>
					<div>
						<%= text_field_tag :email, nil, placeholder: "Email Address", class: "placehold-text form-control form-margin" %>
					</div>
					<div class="cant-see-me">
						<%= number_field_tag :id, @mover.id %>
					</div>
					<div class="center-it">
						<button class="btn btn-primary">We'll Let You Know</button>
					</div>
				<% end %>
			</div>

		</div>
	</div>
</div>